@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2>Welcome to Your Dashboard, @User.Identity.Name!</h2>
    <p>Here, you can manage your courses, grades, and more.</p>

    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-primary btn-block" asp-controller="Courses" asp-action="Index">Manage Courses</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary btn-block" asp-controller="Grades" asp-action="Index">View Grades</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary btn-block" asp-controller="Profile" asp-action="Index">Edit Profile</a>
        </div>
    </div>
</div>
