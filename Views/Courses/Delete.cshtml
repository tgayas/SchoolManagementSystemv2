@model SchoolManagementSystemv2.Models.Course

<h2>Delete Course</h2>

<div>
    <h3>Are you sure you want to delete this course?</h3>
    <div>
        <strong>Course Name:</strong> @Model.CourseName
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Credits:</strong> @Model.Credits
    </div>
    <div>
        <strong>Teacher:</strong> @Model.Teacher.FirstName @Model.Teacher.LastName
    </div>
    <div>
        <strong>Classroom:</strong> @Model.Classroom.RoomNumber
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
