@model IEnumerable<SchoolManagementSystemv2.Models.Course>

<h2>Manage Courses</h2>
<a asp-action="Create" class="btn btn-primary">Add Course</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
                <tr>
                    <td>@course.CourseName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
